<script>

document.write("<b> Information</b><br><br>");
var variable1 = 'Hello,my name is David ';
var variable2 = ',i am 24 years old from israel!<br><br>'; 
var variable3 = ',It would be a honor to work with you!<br><br>';
var final_text = variable1 + variable2+variable3;
document.write(final_text);
document.write("<b>Showing Off numbers</b><br><br>");

var n = 22222222222;
var x = n*n;
document.write("Result of n*n=" + x);

document.write("<br><br><b>Count with me from 1 to 10 :P</b><br><br>");

for (var i=1; i<=10; i=i+1) {

  document.write(i); 

  // Print a comma followed by a space if i < 10
  if (i<10) {
    document.write(", ");
  }
}

function show_random_number() {

  var random_number = Math.random(); // generate random number between 0 and 1
  alert(random_number); // show popup with a random number
  
}

</script>



</p>
<b>Yup that part is for fun.</b>
<input type=button onClick="show_random_number()" value="Generate random number">
